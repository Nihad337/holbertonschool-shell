#!/usr/bin/env bash
# asfasf
IFS=':'

# asfsaf
while read -r username password userid groupid fullname homedir shell; do
    # Replace empty fullname with an empty string if it doesn't exist
    fullname="${fullname:-No full name}"

    # asfasf
    echo "The user $username is part of the $groupid gang, lives in $homedir and rides $shell."
    echo "$userid's place is protected by the passcode x, more info about the user here: $fullname"
    echo "---------------------------------------------"
done < /etc/passwd
